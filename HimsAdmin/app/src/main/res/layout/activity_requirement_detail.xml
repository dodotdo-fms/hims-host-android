<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d8d8"
    android:id="@+id/contentView"
    tools:context="com.dodotdo.himsadmin.activity.RequirementDetailActivity">

    <include layout="@layout/header" android:id="@+id/header"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#fff"
        android:layout_below="@+id/header"
        android:layout_above="@+id/btn_onit"
        app:cardCornerRadius="3dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="sans"
                android:text="done"
                android:textColor="#000"
                android:id="@+id/tv_state"
                android:textSize="17sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="41dp" />
            <TextView
                android:textColor="#000"
                android:id="@+id/tv_content"
                android:text="content"
                android:padding="12dp"
                android:layout_below="@+id/tv_state"
                android:layout_above="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/tv_name"
                android:background="#979797"
                />
            <TextView
                android:fontFamily="sans"
                android:paddingLeft="17dp"
                android:text="ssa"
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_date"
                android:textSize="17sp"
                android:textColor="#323946"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="9dp"
                />
            <Button
                android:id="@+id/btn_assignList"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="List"
                android:textSize="13sp"
                android:background="@drawable/selector_requirement_detail_assignemployee"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:layout_above="@+id/tv_date"
                android:layout_marginBottom="2dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17dp"
                />
            <TextView
                android:fontFamily="sans"
                android:paddingLeft="17dp"
                android:text="ss"
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="17sp"
                android:textColor="#323946"
                android:paddingBottom="17dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    
    <Button
        android:id="@+id/btn_onit"
        android:layout_above="@+id/btn_assign"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:background="@drawable/selector_requirement_detail_imonit"
        android:text="I'M ON IT"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        />
    <Button
        android:id="@+id/btn_assign"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="13sp"
        android:background="@drawable/selector_requirement_detail_assignemployee"
        android:text="ASSIGN EMPLOYEE"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        />

</RelativeLayout>
